<library path="lib/libndt_rviz_visualisation">
  <class name="ndt_rviz_visualisation/NDT"
         type="lslgeneric::NDTDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays elipsoids representing ndt map.
    </description>
    <message_type>ndt_map/NDTMapMsg</message_type>
  </class>
  <class name="ndt_rviz_visualisation/NDTLine"
         type="lslgeneric::NDTLineDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays lines representing ndt map.
    </description>
    <message_type>ndt_map/NDTMapMsg</message_type>
  </class>
  <class name="ndt_rviz_visualisation/NDTGraph"
         type="perception_oru::ndt_rviz_visualisation::NDTGraphDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays ndt Graph representing ndt maps.
    </description>
    <message_type>ndt_map/NDTGraphMsg</message_type>
  </class>
  <class name="ndt_rviz_visualisation/NDTVectorMap"
         type="perception_oru::ndt_rviz_visualisation::NDTVectorMapDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays vectors of ndt maps.
    </description>
    <message_type>ndt_map/NDTVectorMapMsg</message_type>
  </class>

</library>
